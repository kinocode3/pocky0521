<div class="page-header">
   <h1><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>登録ページ</h1>
</div>
<%= form_for(@sport) do |f| %>

   <div class:"form-group">
     <%= f.label :タイトル %><br>      
     <%= f.text_field :name,class:"form-control" %>
   </div>
   
   
   <div class:"form-group">
      <%= f.label :登録日 %><br>      
      <%= f.text_field :date,class:"form-control" %>
  </div>
  
  
  <div class:"form-group">
      <%= f.label :評価（☆マーク） %><br>     
      <%= f.text_field :star,class:"form-control" %>
  </div>
  
  
  <div class:"form-group">
      <%= f.label :動画 %><br>
      <%= f.text_field :clip,class:"form-control" %>
    
   <div class="actions">
      <%= f.submit '登録',class: "btn btn-default",role: "button" %>
      <%=link_to 'トップに戻る', sports_path,class: "btn btn-default",role: "button"  %>
  </div>
  
<% end %>
     