     <div class="panel panel-warning">
     <div class="panel-heading"> 
     <h4>NO.<%=@sport_NO %> : <%= b.name%></h4>
     </div>
     <div class="panel-body">
     <p>登録日<%=b.created_at %></p>
     <p>最終更新日<%=b.updated_at %></p>
     </div>
     <div class="panel-footer">
     <%= link_to '詳しく見る', sport_path(id:b.id,sport_NO: @sport_NO)%>
     </div>
     </div>
     </div>    
<% end %>
</div>