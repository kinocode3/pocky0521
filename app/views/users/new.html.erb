<div class="page-header">
   <h1><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>ユーザー登録</h1>
</div>
<%= form_for(@user) do |f| %>

   <div class:"form-group">
     <%= f.label :ユーザー名 %><br>      
     <%= f.text_field :name,class:"form-control" %>
   </div>
   
   <div class:"form-group">
      <%= f.label :パスワード %><br>      
      <%= f.text_field :password_digest,class:"form-control" %>
  </div>
   
   <div class="actions">
      <%= f.submit '登録',class: "btn btn-default",role: "button" %>
      <%=link_to 'トップに戻る', users_path,class: "btn btn-default",role: "button"  %>
  </div>
  
<% end %>
     